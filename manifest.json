{
  "manifest_version": 3,
  "name": "HDR Avatar Blocker",
  "version": "1.0",
  "description": "Disables HDR for small images (like avatars) by applying a CSS filter.",
  "options_page": "options.html",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}